<?xml version="1.0" encoding="utf-8"?>
 <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/T2Layout"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_x="0dp"
     android:layout_y="0dp"
     android:background="@drawable/white"
     android:orientation="horizontal"
     android:paddingBottom="10dip"
     android:paddingLeft="20dip"
     android:paddingRight="20dip" >

     <!-- Row 1 -->
     
   <LinearLayout
         android:id="@+id/T2Layout00"
         android:layout_width="fill_parent"
         android:layout_height="70dip"
         android:layout_marginBottom="10dip"
         android:layout_marginTop="10dip"
         android:orientation="horizontal"
         android:showDividers="@drawable/white" >

         <LinearLayout
             android:layout_width="460dp"
             android:layout_height="match_parent"
             android:gravity="left" >

             <TextView
                 android:id="@+id/l2textTitle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:layout_marginLeft="20dp"
                 android:gravity="center_horizontal"
                 android:paddingBottom="10dp"
                 android:paddingTop="10dp"
                 android:text="title"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:textSize="40sp" />

         </LinearLayout>

         <ImageView
             android:id="@+id/pos0"
             android:layout_width="90dp"
             android:layout_height="90dp"
             android:src="@drawable/h2_home" />

     </LinearLayout>
    
    <LinearLayout
        android:id="@+id/T2Layout01"
        android:layout_width="120dip"
        android:layout_height="110dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal"
        android:showDividers="@drawable/white" >

        <ImageView
            android:id="@+id/pos1"
            android:layout_width="120dp"
            android:layout_height="110dp"
             android:layout_marginBottom="10dip"
            android:src="@drawable/toast_loading_book_icon" />

        <TextView
            android:id="@+id/textItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:text="Large Text"
            android:textSize="28sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/T2Layout02"
        android:layout_width="120dip"
        android:layout_height="110dip"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip"
         >

         <ImageView
             android:id="@+id/pos2"
             android:layout_width="120dip"
             android:layout_height="110dip"
             android:layout_marginBottom="10dip"
             android:src="@drawable/toast_loading_book_icon" />

        <TextView
            android:id="@+id/textItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:text="Large Text"
             android:textSize="28sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/T2Layout03"
        android:layout_width="120dip"
        android:layout_height="110dip"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip"
         >
         <ImageView
            android:id="@+id/pos3"
            android:layout_width="120dip"
            android:layout_height="110dip"
            android:layout_marginBottom="10dip"
            android:src="@drawable/toast_loading_book_icon" />

        <TextView
            android:id="@+id/textItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:text="Large Text"
            android:textSize="28sp" />

    </LinearLayout>
    

     <LinearLayout
        android:id="@+id/T2Layout04"
        android:layout_width="120dip"
        android:layout_height="110dip"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip"
         >

         <ImageView
             android:id="@+id/pos4"
             android:layout_width="120dip"
             android:layout_height="110dip"
             android:layout_marginBottom="10dip"
             android:scaleType="fitXY"
             android:src="@drawable/toast_loading_book_icon" />

        <TextView
            android:id="@+id/textItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:text="Large Text"
             android:textSize="28sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    
     
      <LinearLayout
        android:id="@+id/T2Layout05"
        android:layout_width="120dip"
        android:layout_height="110dip"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip"
         >
         <ImageView
            android:id="@+id/pos5"
            android:layout_width="120dip"
            android:layout_height="110dip"
            android:layout_marginBottom="10dip"
            android:src="@drawable/toast_loading_book_icon" />

        <TextView
            android:id="@+id/textItem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:text="Large Text"
             android:textSize="28sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    
       <LinearLayout
           android:id="@+id/T2Layout06"
           android:layout_width="120dip"
           android:layout_height="110dip"
           android:layout_marginBottom="10dip"
           android:orientation="horizontal" >

           <ImageView
               android:id="@+id/pos6"
               android:layout_width="150dp"
               android:layout_height="fill_parent"
               android:layout_marginLeft="20dp"
               android:src="@drawable/h2_more_up" />

           <TextView
               android:id="@+id/textItem6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="20dp"
               android:paddingTop="40dp"
               android:text=""
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textSize="28sp" />

           <ImageView
               android:id="@+id/pos7"
               android:layout_width="150dp"
               android:layout_height="fill_parent"
               android:layout_marginLeft="230dp"
               android:src="@drawable/h2_more_down" />

       </LinearLayout>  
    
</TableLayout>